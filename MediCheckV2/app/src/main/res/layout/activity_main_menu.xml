<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu">

    <ScrollView
        android:layout_width="379dp"
        android:layout_height="706dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="701dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textViewMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="30dp"
                android:text="MediCheck Main Menu"
                android:textColor="@color/teal_200"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonViewDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View My Details" />

            <Button
                android:id="@+id/buttonGPDeatils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View GP Details" />

            <Button
                android:id="@+id/buttonInsuranceDeatils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Insurance Details" />

            <Button
                android:id="@+id/buttonMediCoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MediCoin" />

            <Button
                android:id="@+id/buttonMediPredict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MediPredict" />

            <Button
                android:id="@+id/buttonReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reviews" />

            <Button
                android:id="@+id/buttonLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#A30000"
                android:text="Logout"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>